<%= turbo_stream.replace 'my_profile_dropdown_frame' do %>
  <turbo-frame id="my_profile_dropdown_frame">
    <%= render 'layouts/workspace_ui/profile_dropdown' %>
  </turbo-frame>
<% end %>

<%= turbo_stream.replace 'my_profile_frame' do %>
  <turbo-frame id="my_profile_frame">
    <%= render 'workspace_ui/my_profile/form' %>
  </turbo-frame>
<% end %>

<%= turbo_stream.replace 'notification_settings_frame' do %>
  <turbo-frame id="notification_settings_frame">
    <%= render 'workspace_ui/my_profile/notification_settings_form' %>
  </turbo-frame>
<% end %>

<%= turbo_stream.replace 'notification_frame' do %>
  <turbo-frame id="notification_frame">
    <%= ui_kit :notification, flash: flash %>
  </turbo-frame>
<% end unless current_user.locale_previously_changed? %>
