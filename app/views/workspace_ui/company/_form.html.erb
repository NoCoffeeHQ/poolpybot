<div class="grid grid-cols-1 gap-x-8 gap-y-10 md:grid-cols-3">
  <div>
    <h2 class="text-base font-semibold leading-7 text-gray-900"><%= t('.title') %></h2>
    <p class="mt-1 text-sm leading-6 text-gray-600"><%= t('.description').html_safe %></p>
  </div>

  <div class="md:col-span-2">
    <%= form_with model: current_company, url: workspace_company_path, method: :put do |form| %>
      <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        <div class="sm:col-span-4">
          <%= ui_kit :text_field, form: form, attribute: :name %>
        </div>
      
        <div class="col-span-full flex justify-end">
          <%= ui_kit :primary_button, type: :submit, label: t('.submit_button') %>
        </div>
      </div>
    <% end %>

    <div class="mt-8 grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6 md:col-span-2">
      <div class="col-span-full">
        <%= render 'workspace_ui/company/team' %>
      </div>
    </div>
  </div>
</div>

