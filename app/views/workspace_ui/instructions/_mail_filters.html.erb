<div class="bg-gray-50 sm:rounded-lg" data-controller="pane-selector" data-pane-selector-selected-pane-value="gmail">
  <div class="px-4 py-5 sm:p-6">
    <div class="flex items-center justify-between">
      <div class="pr-20">
        <h3 class="text-base font-semibold leading-6 text-gray-900">
          <%= t('.title') %></h3>
        <div class="mt-2 text-sm text-gray-500">
          <p><%= t('.description').html_safe %></p>
        </div>
      </div>
      <div class="flex-shrink-0">
        <select class="mt-2 block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6" data-action="change->pane-selector#change">
          <option value="gmail">Gmail</option>
          <option value="apple">Apple Mail</option>
          <option value="outlook">Outlook</option>
        </select>
      </div>
    </div>
    <div class="mt-5">
      <%= render 'workspace_ui/instructions/mail_filters/gmail' %>
      <%= render 'workspace_ui/instructions/mail_filters/apple' %>
      <%= render 'workspace_ui/instructions/mail_filters/outlook' %>
    </div>
  </div>
</div>