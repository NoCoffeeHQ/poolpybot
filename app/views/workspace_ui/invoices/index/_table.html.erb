<div class="flow-root">
  <div class="-mx-4 -my-2 pb-14 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
      <table class="min-w-full">
        <thead>
          <tr>
            <th scope="col" class="whitespace-nowrap py-3.5 pl-4 pr-3 text-left uppercase text-xs font-semibold text-slate-500 bg-slate-50"><%= t('.columns.vendor') %></th>
            <th scope="col" class="whitespace-nowrap px-2 py-3.5 text-left uppercase text-xs font-semibold text-slate-500 bg-slate-50"><%= t('.columns.invoice_id') %></th>
            <th scope="col" class="whitespace-nowrap px-2 py-3.5 text-left uppercase text-xs font-semibold text-slate-500 bg-slate-50"><%= t('.columns.date') %></th>
            <th scope="col" class="whitespace-nowrap px-2 py-3.5 text-left uppercase text-xs font-semibold text-slate-500 bg-slate-50"><%= t('.columns.total_amount') %></th>
            <th scope="col" class="whitespace-nowrap px-2 py-3.5 text-left uppercase text-xs font-semibold text-slate-500 bg-slate-50"><%= t('.columns.tax_amount') %></th>
            <th scope="col" class="whitespace-nowrap px-2 py-3.5 text-left uppercase text-xs font-semibold text-slate-500 bg-slate-50"><%= t('.columns.status') %></th>
            <th scope="col" class="whitespace-nowrap px-2 py-3.5 text-left uppercase text-xs font-semibold text-slate-500 bg-slate-50"><%= t('.columns.pdf_document') %></th>
            <th scope="col" class="relative whitespace-nowrap py-3.5 pl-3 pr-4 sm:pr-0 uppercase text-xs font-semibold text-slate-500 bg-slate-50">
              <span class="sr-only"><%= t('.table.columns.action') %></span>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 bg-white">
          <% if @invoices.empty? %>
            <tr>
              <td colspan="8" class="text-center py-12 text-sm font-semibold text-gray-900">
                <%= t('.no_items') %>
              </td>
            </tr>
          <% else %>
            <%= render @invoices %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>