<%= tag.div class: 'hidden relative z-30',
  data: {
    controller: 'modal transition',
    action: 'keyup@window->modal#closeWithKeyboard',
    'transition-enter-active' => 'transition ease-out duration-300',
    'transition-enter-from' => 'transform opacity-0',
    'transition-enter-to' => 'transform opacity-100',
    'transition-leave-active' => 'transition ease-in duration-200',
    'transition-leave-from' => 'transform opacity-100',
    'transition-leave-to' => 'transform opacity-0'
  } do %>
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>

  <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
    <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0" data-action="click->modal#clickOutside">
      <div 
        class="hidden relative transform overflow-hidden rounded-lg bg-white px-4 pb-4 pt-5 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg sm:p-6"
        data-modal-target="panel"
        data-controller="transition"
        data-transition-enter-active="transition ease-out duration-300"
        data-transition-enter-from="transform opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
        data-transition-enter-to="transform opacity-100 translate-y-0 sm:scale-100"
        data-transition-leave-active="transition ease-in duration-200"
        data-transition-leave-from="transform opacity-100 translate-y-0 sm:scale-100"
        data-transition-leave-to="transform opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
      >
        <div class="absolute right-0 top-0 hidden pr-4 pt-4 sm:block">
          <button type="button" class="rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" data-action="click->modal#close">
            <span class="sr-only"><%= t('.close_button') %></span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <%= content %>
      </div>
    </div>
  </div>
<% end %>
